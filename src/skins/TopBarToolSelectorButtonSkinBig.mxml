<?xml version="1.0" encoding="utf-8"?>
<s:SparkButtonSkin xmlns:fx="http://ns.adobe.com/mxml/2009" 
             xmlns:s="library://ns.adobe.com/flex/spark" 
             xmlns:fb="http://ns.adobe.com/flashbuilder/2009"
             minWidth="18" minHeight="18" 
             alpha.disabled="0.5"
			 enterState="sparkbuttonskin1_enterStateHandler(event)">    
    <fx:Metadata>
        <![CDATA[ 
        /** 
         * @copy spark.skins.spark.ApplicationSkin#hostComponent
		 * 
			 width="26" height="26"
         */
        [HostComponent("spark.components.Button")]
        ]]>
    </fx:Metadata>
    
    <fx:Script fb:purpose="styling">
        <![CDATA[         
			import mx.controls.Alert;
			import mx.events.FlexEvent;
			import mx.events.StateChangeEvent;
			
			import spark.components.Group;
            /* Define the skin elements that should not be colorized. 
            For button, the graphics are colorized but the label is not. */
            static private const exclusions:Array = ["labelDisplay"];
			
			override protected function initializationComplete():void
			{
				super.initializationComplete();
				buttonImage.source = "assets/icons/"+hostComponent.name+".png";
			} 
			
			protected function sparkbuttonskin1_enterStateHandler(event:FlexEvent):void
			{
				Alert.show(String(event))
			}
			
		]]>        
    </fx:Script>
        
    <!-- states -->
    <s:states>
        <s:State name="up" />
        <s:State name="over" />
        <s:State name="down" />
        <s:State name="disabled" />
    </s:states>
	<!--- layer 2: fill @private
	<s:Rect id="fill" width="100%" radiusX="6" radiusY="6" height="100%" top="1">
		<s:fill>
			<s:LinearGradient rotation="90">
				<s:GradientEntry color="0xFFFFFF" 
								 color.over="0xBBBDBD"
								 color.down="0xAAAAAA" 
								 alpha="0.0" 
								 alpha.over=".85"/>
				<s:GradientEntry color="0xD8D8D8" 
								 color.over="0x9FA0A1"
								 color.down="0x929496" 
								 alpha="0.0"
								 alpha.over=".85"/>
			</s:LinearGradient>
		</s:fill>
	</s:Rect>-->
	
	<!-- layer 8: text -->
	<!--- @copy spark.components.supportClasses.ButtonBase#labelDisplay -->
	<s:BitmapImage id="buttonImage" verticalCenter="0" horizontalCenter="0"/>
    
</s:SparkButtonSkin>
